<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBar" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.AppBar.Toolbar">
        <item name="android:layout_height">?android:attr/actionBarSize</item>
        <item name="android:background">?attr/colorPrimaryDark</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="AppTheme.AppBar.Toolbar.Popup" parent="ThemeOverlay.MaterialComponents.Light">
        <item name="android:background">?attr/colorPrimary</item>
    </style>
</resources>
