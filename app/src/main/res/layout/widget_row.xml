<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="70dp"
        android:id="@+id/widget_row_container"
        android:layout_width="match_parent">

    <ImageView
            android:id="@+id/widget_image"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_centerVertical="true"
            android:contentDescription="Token image"
            android:layout_margin="8dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"/>

    <TextView
            android:id="@+id/widget_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/widget_image"
            android:layout_toEndOf="@+id/widget_image"
            android:textSize="20sp"
            android:textStyle="bold"
            android:typeface="monospace"
            android:textColor="#000000"
            android:layout_marginTop="2dp"/>

    <TextView
            android:id="@+id/widget_issuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/widget_image"
            android:layout_toEndOf="@+id/widget_image"
            android:layout_below="@+id/widget_code"
            android:textColor="#000000"
            android:maxLines="1"
            android:ellipsize="end"
            android:textStyle="bold"/>

    <TextView
            android:id="@+id/widget_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_toRightOf="@+id/widget_image"
            android:layout_toEndOf="@+id/widget_image"
            android:layout_below="@+id/widget_issuer"
            android:textColor="#000000"
            android:layout_marginBottom="2dp"/>
</RelativeLayout>